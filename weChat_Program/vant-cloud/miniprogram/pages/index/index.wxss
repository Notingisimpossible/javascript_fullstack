/* miniprogram/pages/index/index.wxss */
.new-item{
  width: 80%;
  background-color: #fff;
  border-radius: 38rpx;
  height: 200rpx;
  text-align: center;
  margin: 40rpx auto;
  box-shadow: 0px 7px 20px #1c1c1c;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  transition: .5s all;
}
.new-item image{
  width: 124rpx;
  height: 124rpx;
}
.right-conner{
  display: flex;
  flex-direction: column;
  /* 弹性布局方向y 继承父容器高度 */
  justify-content: space-between;
  /* 加空格 */
}
.right-conner .item-name{
  margin-right: 14rpx;
}
.icon-arrow{
  text-align: right;
  padding-right: 13rpx;
}
.new-item:hover{
  box-shadow: none;
}
